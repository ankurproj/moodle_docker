<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/applicationcheck/db"
       VERSION="2026010300"
       COMMENT="XMLDB file for Application Check tool"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">

  <TABLES>

    <TABLE NAME="tool_applicationcheck_apps"
           COMMENT="Application records">

      <FIELDS>

        <FIELD NAME="id"
               TYPE="int"
               LENGTH="10"
               NOTNULL="true"
               SEQUENCE="true"
               COMMENT="Primary key"/>

        <FIELD NAME="applicationid"
               TYPE="char"
               LENGTH="50"
               NOTNULL="true"
               COMMENT="Application id"/>

        <FIELD NAME="dob"
               TYPE="int"
               LENGTH="10"
               NOTNULL="true"
               COMMENT="DOB (timestamp)"/>

        <FIELD NAME="email"
               TYPE="char"
               LENGTH="100"
               NOTNULL="true"
               COMMENT="Email"/>

        <FIELD NAME="timecreated"
               TYPE="int"
               LENGTH="10"
               NOTNULL="true"
               COMMENT="Time created"/>

      </FIELDS>

      <KEYS>
        <KEY NAME="primary"
             TYPE="primary"
             FIELDS="id"
             COMMENT="Primary key"/>
      </KEYS>

    </TABLE>

  </TABLES>
</XMLDB>
